{
    "plugins": [
        "@prettier/plugin-php",
        "prettier-plugin-blade",
        "prettier-plugin-tailwindcss"
    ],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "bracketSameLine": true,
                "htmlWhitespaceSensitivity": "ignore",
                "printWidth": 100,
                "singleAttributePerLine": false
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "bracketSameLine": true,
                "htmlWhitespaceSensitivity": "ignore",
                "printWidth": 100,
                "singleAttributePerLine": false,
                "singleQuote": true
            }
        },
        {
            "files": ["*.{js,jsx}"],
            "options": {
                "bracketSameLine": true,
                "htmlWhitespaceSensitivity": "ignore",
                "printWidth": 100,
                "singleAttributePerLine": false,
                "singleQuote": true
            }
        },
        {
            "files": ["*.php"],
            "options": {
                "singleQuote": true,
                "printWidth": 100
            }
        }
    ],
    "tailwindConfig": "./tailwind.config.js"
}
